<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
      fx:controller="org.team2.roktokhoj.views.Main">
    <TabPane fx:id="tabView" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab closable="false" text="Search Donor">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="-Infinity" prefWidth="-Infinity">
                <fx:include fx:id="searchView" source="search.fxml" alignment="CENTER" spacing="5.0"
                            AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
            </AnchorPane>
        </Tab>
        <Tab closable="false" onSelectionChanged="#onTabSelectionChanged"
             text="Register">
            <AnchorPane minHeight="0.0" minWidth="0.0">
                <fx:include fx:id="registerView" source="register.fxml" alignment="CENTER" spacing="5.0"
                            AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
            </AnchorPane>
        </Tab>
        <Tab closable="false"  text="Profile">
            <AnchorPane minHeight="0.0" minWidth="0.0">
                <fx:include fx:id="profileView" source="profile.fxml" alignment="CENTER" spacing="5.0"
                            AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
            </AnchorPane>
        </Tab>
    </TabPane>
</VBox>
