<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.team2.roktokhoj.components.AddressSelector?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox fx:id="view" prefHeight="600.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx" fx:controller="org.team2.roktokhoj.views.Search">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <TabPane fx:id="searchTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab text="Filter">
            <VBox alignment="CENTER" spacing="5.0">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="Blood Group:"/>
                    <ComboBox fx:id="searchCbBloodGroup" prefWidth="150.0"/>
                </HBox>
                <AddressSelector fx:id="searchAddressSelector" hgap="5.0" VBox.vgrow="ALWAYS"/>
            </VBox>
        </Tab>
        <Tab fx:id="searchResultsTab" text="Search Results">
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <VBox>
                    <TableView fx:id="searchResultTable" prefHeight="-Infinity" prefWidth="-Infinity"
                               VBox.vgrow="ALWAYS">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                        <columns>
                            <TableColumn text="Name">
                                <cellValueFactory>
                                    <PropertyValueFactory property="name"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Phone">
                                <cellValueFactory>
                                    <PropertyValueFactory property="phone"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Email">
                                <cellValueFactory>
                                    <PropertyValueFactory property="email"/>
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                    </TableView>
                </VBox>
            </ScrollPane>
        </Tab>
    </TabPane>
    <ButtonBar>
        <buttons>
            <Button mnemonicParsing="false" onAction="#onSearchResetClicked" text="Reset"/>
            <Button mnemonicParsing="false" onAction="#onSearchClicked" text="Search"/>
        </buttons>
    </ButtonBar>
</VBox>