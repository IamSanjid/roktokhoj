<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.team2.roktokhoj.components.AddressSelector?>
<VBox fx:id="view" prefHeight="600.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx" fx:controller="org.team2.roktokhoj.views.Profile">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <TabPane fx:id="profileTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab fx:id="loginTab" text="Login">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="-Infinity" prefWidth="-Infinity">
                <VBox spacing="5.0" alignment="CENTER" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <HBox spacing="5.0" alignment="CENTER">
                        <Label text="Phone:"/>
                        <TextField fx:id="loginTxtPhone"/>
                    </HBox>
                    <HBox spacing="5.0" alignment="CENTER">
                        <Label text="Password:"/>
                        <PasswordField fx:id="loginPassword"/>
                    </HBox>
                    <HBox alignment="CENTER">
                        <Button mnemonicParsing="false" onAction="#onLoginClicked" text="Login"/>
                    </HBox>
                </VBox>
            </AnchorPane>
        </Tab>
        <Tab fx:id="profileTab" text="Profile" disable="true">
            <VBox>
                <GridPane hgap="10.0" minHeight="90" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" percentHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" percentHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" percentHeight="50.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <HBox alignment="CENTER_RIGHT" spacing="5.0">
                        <Label text="Name:"/>
                        <TextField fx:id="profileTxtName"/>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.rowIndex="1">
                        <Label text="Email:"/>
                        <TextField fx:id="profileTxtEmail"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1">
                        <Label text="Phone:"/>
                        <TextField fx:id="profileTxtPhone"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="Blood Group:"/>
                        <ComboBox fx:id="profileCbBloodGroup" prefWidth="150.0"/>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.rowIndex="2">
                        <Label text="Availability:"/>
                        <ComboBox fx:id="profileCbAvailability"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Label text="Confirm Password:"/>
                        <PasswordField fx:id="profilePassword"/>
                    </HBox>
                </GridPane>
                <AddressSelector fx:id="profileAddressSelector" hgap="5.0" VBox.vgrow="ALWAYS"/>
                <HBox alignment="CENTER" spacing="5.0">
                    <Button mnemonicParsing="false" onAction="#onProfileUpdateClicked" text="Update"/>
                    <Button mnemonicParsing="false" onAction="#onProfileLogoutClicked" text="Logout"/>
                </HBox>
            </VBox>
        </Tab>
    </TabPane>
</VBox>